{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news-item",
    "pluralName": "news",
    "displayName": "News",
    "description": "News content managed in Strapi"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "summary": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "category": {
      "type": "enumeration",
      "enum": ["product", "tech", "standard", "company"]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json"
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "relatedProducts": {
      "type": "json"
    }
  }
}
